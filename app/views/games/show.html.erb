<div class="row col-10 offset-2">
  <div class="col-9" align="right">
    <table id="chessboard">
      <%= render 'board' %>
    </table>
  </div>
  <div class="side-panel col-2">
    <p class="forfeit-button"><%= link_to "Forfeit Game", game_path(@game), method: :delete, class: 'btn btn-outline-secondary' %></p>
  </div>
</div>

<div id="pawn-promotion-modal" class="modal">
  <p>Pawn promotion modal</p>
  <% @piece = Piece.find_by(x_position: @game.last_piece_x, y_position: @game.last_piece_y) %>
  <% if @piece %>
    <%= image_tag('WhiteQueen.png', height: '65px', class: 'promoteButton', :data => { :id => @piece.id, :type => 'Queen' }).to_s %>
    <%= image_tag('WhiteKnight.png', height: '65px', class: 'promoteButton', :data => { :id => @piece.id, :type => 'Knight' }).to_s %>
    <%= image_tag('WhiteRook.png', height: '65px', class: 'promoteButton', :data => { :id => @piece.id, :type => 'Rook' }).to_s %>
    <%= image_tag('WhiteBishop.png', height: '65px', class: 'promoteButton', :data => { :id => @piece.id, :type => 'Bishop' }).to_s %>
  <% end %>
  <a href="pawn-promotion-modal" rel="modal:close">Close</a>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
</div>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
  var type;
  var x;
  var y;
  $(document).ready(init_draggables_and_droppables);
  function init_draggables_and_droppables() {
    $(".draggable").draggable();
    $(".droppable").droppable({
      drop: function( event, ui ) {
        type = ui.draggable.data('type')
        var id = ui.draggable.data('id')
        x = $(this).data('x')
        y = $(this).data('y')
        $.ajax({
          type: 'PUT',
          url: `/pieces/${id}?x_position=${x}&y_position=${y}`
        });
      }
    });
  };
  function openModal() {
    if (type === "Rook"/* && (y === 0 || y === 7)*/) {
      $('#pawn-promotion-modal').modal('toggle');
    }
  }
  function handlePawnPromotion() {
    var id = $(this).data('id');
    var type = $(this).data('type')
    var info = {
      id,
      type
    }

    $.ajax({
      type: 'PUT',
      url: `/pieces/${id}/promote`,
      data: info,
      dataType: "json"
    });
    location.reload();
  }
  $('.promoteButton').on('click', handlePawnPromotion);
</script>
