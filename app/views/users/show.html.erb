<br>
<div class="booyah-box col-6 offset-4">
  <div class="card">
    <div class="card-body">
      <h1>My Games:</h1>
      <% @user_games.each do |game| %>
        <p><%= link_to game.name, game_path(game) %></p>
      <% end %>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <p>My Wins:</p>
      <%= current_user.wins %>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <p>My Losses:</p>
      <%= current_user.losses %>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <p>Total games:</p>
      <%= current_user.total_games %>
    </div>
  </div>
</div>
