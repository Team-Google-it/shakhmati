<br>
<div class="booyah-box col-6 offset-4">
  <p>Signed in as: <strong><%= current_user.email %></strong></p>
  <div class="card">
    <div class="card-body">
      <h3>My Games:</h3>
      <% @user_games.each do |game| %>
        <p><%= link_to game.name, game_path(game) %></p>
      <% end %>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <p>My Wins: <strong><%= current_user.wins %></strong></p>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <p>My Losses: <strong><%= current_user.losses %></strong></p>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <p>Total games: <strong><%= current_user.total_games %></strong></p>
    </div>
  </div>
</div>
